<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/pastelWhite"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dip" >
    <ImageView
        android:src="@drawable/pin_small"
        android:id="@+id/pin"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
>

    </ImageView>
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/profile_circle"
        android:id="@+id/prof"
        android:layout_toRightOf="@+id/pin"
        >
    <ImageView
        android:src="@drawable/bobby"
        android:id="@+id/profilePhoto"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        >

    </ImageView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/post1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/prof">
    <LinearLayout
        android:id="@+id/post2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        >
        <TextView
            android:textSize="18sp"
            android:layout_marginRight="14dp"

            android:id="@+id/textFrom"
            android:text="@string/sample_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:textSize="18sp"
            android:id="@+id/textArrow"
            android:text="@string/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_marginLeft="14dp"
            android:textSize="18sp"
            android:text="@string/sample_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>
    <TextView
        android:layout_marginLeft="14dp"
        android:textSize="16sp"
        android:text="@string/q1"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content">

    </TextView>
    </LinearLayout>
</RelativeLayout>