<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/pastelWhite"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dip" >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/actionPanel">
            <ImageView
                android:src="@drawable/pin_small"
                android:id="@+id/pin"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                >

            </ImageView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/actionPanel"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/post2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_marginLeft="14dp"
                    android:textSize="30sp"
                    android:text="@string/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textArrow">

                </TextView>
                <TextView
                    android:layout_marginLeft="14dp"
                    android:textSize="26sp"
                    android:text="@string/sample_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/topicText">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="14dp"
                    android:textSize="16sp"
                    android:id="@+id/markText"
                    android:text="@string/q1"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

</RelativeLayout>